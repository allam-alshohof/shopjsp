<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <ul class="cart__item-list">
                <% products.forEach(p=> { %>
                    <li class="cart__item">
                        <h1>
                            <%= p.productId.title %>
                        </h1>
                        <h2>
                            Quantity: <%= p.quantity %>
                        </h2>
                    </li>
                    <% }) %>
            </ul>
            <div class="centered">
                <h1>Total: <%= totalSum %></h1>
            </div>
            <div class="centered">
                <button class="btn" id="order-id"> ORDER </button>
                <script src="https://js.stripe.com/v3/"></script>
                <script>
                    var stripe = Stripe('pk_test_51NHsllSHk3EhIvSWycGxIFEwH4qTEiNO5MZJT6OL7LTnZxuoY4kX59TewzqvqJvMls8UyTjrghIbKKBQqcusl4N700rosMgGgT');
                    var orderBtn = document.getElementById('order-id');
                    orderBtn.addEventListener('click', function() {
                        stripe.redirectToCheckout({
                            sessionId: '<%= sessionId %>'
                        });
                    });
                </script>
            </div>
            <%- include('../includes/end.ejs') %>